# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# WhatsApp Cloud API Configuration
WHATSAPP_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
VERIFY_TOKEN=my_secret_test_token_123

# Admin & Testing Configuration
# Generate a strong random token: openssl rand -hex 32
ADMIN_TOKEN=your_admin_secret_token_here
TESTING_MODE=false
# Comma-separated list of phone numbers allowed to use admin commands via WhatsApp
# Example: 972501234567,972509876543
ADMIN_PHONE_NUMBERS=

# Ngrok Configuration (optional - get from https://dashboard.ngrok.com/get-started/your-authtoken)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# Google Cloud Configuration
# Set this to the path of your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Server Configuration
PORT=8080
